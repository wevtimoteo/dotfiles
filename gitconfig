[user]
	name = Weverton do Couto Timoteo
	email = weverton.ct@gmail.com

[github]
  username = wevtimoteo
	user = wevtimoteo

[diff]
	tool = vimdiff

[difftool "ksdiff"]
  cmd = ksdiff \"$LOCAL\" \"$REMOTE\"

[core]
	excludesfile = ~/.gitignore_global
  autosetuprebase = always

[color]
  ui = auto

[alias]
  st  = status --short --branch
  ci  = commit
  br  = branch
  co  = checkout
  df  = diff
  lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lgm = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --branches
  lg-commit-msgs = log --pretty=format:'%s'
  who = shortlog -s --
  dft = difftool -y
	d = difftool
  committers = shortlog --summary --email --committer -n
  last-commit = !sh -c 'git rev-list HEAD --abbrev-commit | head -1'
  current-branch = branch --show-current
  update = !sh -c 'git fetch --prune && git rebase --autostash origin/`git current-branch`'
  oh-my-god = !sh -c 'git fsck --lost-found | grep "dangling commit" | cut -d " " -f 3 | xargs git log --oneline --no-walk -p'

[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[difftool]
	prompt = false
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[credential]
	helper = store
